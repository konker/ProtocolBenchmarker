<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Screen">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="Panel">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="ButtonPanel">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="MapPanel">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="Map">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">184dp</item>
    </style>
    <style name="InfoPanel">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ListItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">#cccccc</item>
    </style>
    <style name="ListItemText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#0000aa</item>
    </style>
    <style name="InfoLabel" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#0099cc</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>
    <style name="InfoText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="InfoBigText" parent="@android:style/TextAppearance">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">6dp</item>
        <item name="android:maxLines">35</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="InfoButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="InfoList">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">120dp</item>
    </style>
    <style name="InfoRadioGroup">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="InfoRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>
    <style name="SettingsList">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>

